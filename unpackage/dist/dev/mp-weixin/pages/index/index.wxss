.header-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.header-image {
  width: 140rpx;
  height: 40rpx;
  margin: 0 20rpx;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
}
.header-input-contaniner {
  width: 100%;
  height: 60rpx;
  background: #ededed;
  border-radius: 10rpx;
  position: relative;
}
.header-input-contaniner .iconfont {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.header-input-contaniner .header-search {
  margin-left: 60rpx;
  font-size: 24rpx;
  height: 60rpx;
}
.header-input-contaniner .placeholder {
  font-size: 24rpx;
  text-align: center;
  text-indent: -60rpx;
}
.header-button {
  width: 144rpx;
  height: 60rpx;
  margin: 0 20rpx;
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  font-size: 24rpx;
}
.nav-container {
  white-space: nowrap;
}
.nav-container .nav-item {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  position: relative;
}
.nav-container .nav-item.active::after {
  display: block;
  width: 100%;
  height: 2rpx;
  background-color: #f00;
  content: "";
  position: absolute;
  left: 0;
  bottom: 2rpx;
}

